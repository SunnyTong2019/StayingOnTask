<script>
    $(document).ready(function () {
        $.get("/projects", function (data) {
            console.log(data);
            for (var i = 0; i < data.length; i++) {
                var trEle = $("<tr>");
                trEle.addClass("tabs");
                var tdName = $("<td>");
                tdName.addClass("tab col s4");
                tdName.text(data[i].name);
                var tdTask = $("<td>");
                tdTask.addClass("tab col s4");
                tdTask.text("0 (/20)");
                var tdDate = $("<td>");
                tdDate.addClass("tab col s4");
                tdDate.text(data[i].projectDate);
                trEle.append(tdName, tdTask, tdDate);

                $("tbody").append(trEle);
            }
        });
    });
</script>

<style>
    #emptyProjects {
        display: none;
